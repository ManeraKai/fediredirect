section(class="option-block" id="mastodon_page")
    h1(data-localise="__MSG_general__") Mastodon
    hr

    form(id="mastodon_form")
        div(class="block option-input")
            div 
                h4 Your instance
                input(class="custom-instance instance" type="url" placeholder="https://mastodon.ml")

        div(class="block option-input")
            div 
                h4 Code
                input(class="code" type="password")

        div(class="block")
            button(type="submit" class="button button-inline") Save

    hr

    script(type="module" src="widgets/mastodon/mastodon.js")