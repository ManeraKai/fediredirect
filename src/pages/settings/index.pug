doctype html
html(id="elementToShowWithJavaScript" lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="icon" type="image/x-icon" href="../../../assets/images/logo.svg")
        link(href="../stylesheets/styles.css" rel="stylesheet")
        title Settings
        script(type="module" src="./init.js")
    body(class="option" dir="auto")
        section(class="links" id="links")
            div(class="title")
                a(href="#general") 
                    include /src/assets/general-icon.svg
                    span(data-localise="__MSG_general__") General

            div(class="title")
                a(href="#lemmy")
                    img(src="/assets/lemmy.svg")
                    span Lemmy
            
            div(class="title")
                a(href="#mastodon")
                    img(src="/assets/mastodon.webp")
                    span Mastodon
            
            div(class="title")
                a(target="_blank" href="https://github.com/ManeraKai/fediredirect")
                    img(src="/assets/about-icon-light.svg")

                    span(data-localise="__MSG_about__") About
        div#pages
            include /src/pages/settings/widgets/general
            include /src/pages/settings/widgets/lemmy/lemmy
            include /src/pages/settings/widgets/mastodon/mastodon
    script(type="module" src="./index.js")
