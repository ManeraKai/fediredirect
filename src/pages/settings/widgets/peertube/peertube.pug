section(class="option-block" id="peertube_page")
    h1 Peertube
    hr

    form(id="peertube_form")
        div(class="block option-input")
            div 
                h4 Your instance
                input(class="custom-instance instance" type="url")

        div(class="block option-input")
            div 
                h4 Username or Email
                input(class="custom-instance" type="text" class="username")
            div 
                h4 Password
                input(class="custom-instance" type="password" class="password")
        
        div(class="block option-input")
            div 
                h4 Access Token
                input(class="custom-instance" type="text" class="access_token")

        div(class="block")
            button(type="submit" class="button button-inline") Save

    script(type="module" src="widgets/peertube/peertube.js")